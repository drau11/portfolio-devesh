---
import type { ExperienceProps } from "@types";

const { experience } = Astro.props as { experience: ExperienceProps[] };
---

<section id="experience" class="py-24">
  <h2 class="text-3xl font-bold text-neutral-200 mb-8">Experience</h2>
  <div class="flex flex-col gap-8">
    {
      experience.map((job: ExperienceProps) => (
        <div class="grid md:grid-cols-4 gap-8">
          <div class="col-span-1">
            <h3 class="text-lg font-bold text-neutral-200">{job.company}</h3>
            <p class="text-sm text-neutral-400">
              {job.startDate} - {job.endDate}
            </p>
          </div>
          <div class="col-span-3">
            <h4 class="text-xl font-bold text-neutral-200">{job.position}</h4>
            <ul class="list-disc list-inside mt-2">
              {Array.isArray(job.summary) && job.summary.map((item: string) => (
                <li class="text-neutral-400">{item}</li>
              ))}
            </ul>
          </div>
        </div>
      ))
    }
  </div>
</section>
